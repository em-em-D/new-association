
<%= form_for(@events , url: '/events', method: :post) do |f| %>
    <%= f.label :eventype %>
    <%= f.text_field :eventype, class: "form-control" %>

    <%= f.label :description %>
    <%= f.text_area :description, size: "5x10", class: "form-control" %>
    
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>

    <%= f.label :date %>
    <%= f.date_field :date %>

    
    <%= f.submit yield(:button), class: "btn btn-primary" %>

<% end %>
   
